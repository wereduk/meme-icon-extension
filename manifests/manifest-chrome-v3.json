{
  "manifest_version": 3,
  "name": "Meme Icon Extension",
  "version": "0.1.0",
  "description": "Replace meme values with emojis (69 → ♋︎, etc)",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file:///*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],
      "exclude_matches": [
        "https://chrome.google.com/*",
        "https://chromewebstore.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meme Icon Extension"
  },
  "web_accessible_resources": [],
  "data_collection_permissions": []
}
